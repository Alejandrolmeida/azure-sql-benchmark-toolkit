# Azure SQL Benchmark Toolkit - Global Configuration
# This file contains default settings that apply to all clients

# Project Information
PROJECT_NAME="Azure SQL Benchmark Toolkit"
PROJECT_VERSION="2.0.0"
PROJECT_REPO="https://github.com/alejandrolmeida/azure-sql-benchmark-toolkit"

# Default Benchmark Settings
DEFAULT_INTERVAL="120"     # 2 minutes (seconds)
DEFAULT_DURATION="86400"   # 24 hours (seconds)

# Python Settings
PYTHON_MIN_VERSION="3.8"
REQUIRED_PACKAGES="pyodbc"

# Azure Defaults
DEFAULT_AZURE_REGION="westeurope"
DEFAULT_VM_FAMILY="Esv5"
DEFAULT_CURRENCY="EUR"

# Report Settings
REPORT_LANGUAGE="es"       # en, es, fr, de
REPORT_THEME="azure"       # azure, dark, light
ENABLE_CHARTS="true"
ENABLE_PRISM="true"

# MCP Settings
MCP_CONFIG_FILE="mcp.json"
ENABLE_MCP="true"

# GitHub Copilot Agent
COPILOT_AGENT="azure-architect"
COPILOT_MODE="azure-architect"

# Logging
LOG_LEVEL="INFO"           # DEBUG, INFO, WARNING, ERROR
LOG_FILE="benchmark.log"

# Notifications (Optional)
ENABLE_EMAIL_NOTIFICATIONS="false"
ENABLE_TEAMS_NOTIFICATIONS="false"

# Performance
MAX_PARALLEL_BENCHMARKS="1"  # Don't run multiple benchmarks on same server
MAX_JSON_SIZE_MB="100"       # Alert if JSON > 100 MB

# Security
ENCRYPT_PASSWORDS="true"
STORE_CREDENTIALS_IN_KEYVAULT="false"
AZURE_KEYVAULT_NAME=""

# Paths (Auto-detected, don't modify unless needed)
TOOLS_DIR="tools"
CUSTOMERS_DIR="customers"
TEMPLATES_DIR="templates"
DOCS_DIR="docs"
CONFIG_DIR="config"
